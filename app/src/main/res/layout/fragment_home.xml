<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".ui.home.HomeFragment" >

    <ImageView
        android:id="@+id/button_add_pills"
        android:layout_width="366dp"
        android:layout_height="305dp"
        android:layout_marginTop="-50dp"
        android:onClick="onCliclAddPill"
        android:src="@drawable/add_pills"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/button_medicine_pills"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-35dp"
        android:layout_marginEnd="-160dp"
        android:src="@drawable/medicine_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_add_pills"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add_pills"
        app:layout_constraintVertical_bias="0.039" />

    <ImageView
        android:id="@+id/button_wiget_time"
        android:layout_width="181dp"
        android:layout_height="151dp"
        android:layout_marginStart="-165dp"
        android:layout_marginTop="-21dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/wiget_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toEndOf="@+id/button_add_pills"
        app:layout_constraintTop_toBottomOf="@+id/button_add_pills"
        app:layout_constraintVertical_bias="0.004" />
</androidx.constraintlayout.widget.ConstraintLayout>